             x:Class="Tetris.InformationPage"
             Title="Информация за устройството">
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Данни за устройството:" Margin="20, 10, 20, 0" FontAttributes="Bold" FontSize="18" TextColor="#334766"/>
            <Label x:Name="lblDeviceInfo" Text="" Margin="20, 0" FontSize="18"/>

            <Label Text="Данни за екрана" Margin="20, 40, 20, 0" FontAttributes="Bold" FontSize="18" TextColor="#334766"/>
            <Label x:Name="lblDisplayInfo" Text="" Padding="20, 0, 20, 20" FontSize="18"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>