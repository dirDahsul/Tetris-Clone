<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Tetris.SettingsPage"
             BackgroundColor="#00466e"
             Title="Settings">

    <ContentPage.Resources>
        <ResourceDictionary>
            <xct:MathExpressionConverter x:Key="MathExpressionConverter" />
            <xct:MultiMathExpressionConverter x:Key="MultiMathExpressionConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid x:Name="bdSettings" Margin="20, 20, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1.6*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1.4*"/>
                <RowDefinition Height="4.0*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="grInfo" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Welcome to Filtris " FontAttributes="None" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.024)'}"/>
                            <Span Text="Settings!" FontAttributes="Bold" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.024)'}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="#ffd45c">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Please " FontAttributes="None" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.019)'}"/>
                            <Span Text="read" FontAttributes="Bold" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.019)'}"/>
                            <Span Text=" carefully before changing any attributes" FontAttributes="None" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.019)'}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>

            <BoxView Grid.Row="1" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.002)'}"/>

            <Grid x:Name="grRestore" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <!--<RowDefinition Height="auto"/>-->
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Restore default settings" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.022)'}" TextColor="White" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="Start" FontAttributes="Bold"/>
                <Switch Grid.Row="0" x:Name="sRestoreDefaults" IsToggled="False" OnColor="#ff9f21" HorizontalOptions="End" VerticalOptions="Center" Toggled="sRestoreDefaults_Toggled">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="On">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="#ffdf87"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="White"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Switch>
                <!--<Button VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="20" WidthRequest="40"-->
                <!--<BoxView BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="1"/>-->
                <!--<BoxView Grid.Row="1" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="{Binding Source={x:Reference grRestore}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.017)'}"/>-->
            </Grid>

            <BoxView Grid.Row="3" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.002)'}"/>

            <Grid Grid.Row="4" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="MUSIC" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                <Switch x:Name="sMusic" IsToggled="True" Grid.Row="1" Grid.Column="0" OnColor="#ff9f21" HorizontalOptions="Center" VerticalOptions="Center" Toggled="sMusic_Toggled">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="On">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="#ffdf87"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="White"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Switch>

                <Label Text="SOUNDS" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" Grid.Row="0" Grid.Column="1"/>
                <Switch x:Name="sSounds" IsToggled="True" Grid.Row="1" Grid.Column="1" OnColor="#ff9f21" HorizontalOptions="Center" VerticalOptions="Center" Toggled="sSounds_Toggled">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="On">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="#ffdf87"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="White"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Switch>

                <Label Text="VIBRATION" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" Grid.Row="0" Grid.Column="2"/>
                <Switch x:Name="sVibration" IsToggled="False" Grid.Row="1" Grid.Column="2" OnColor="#ff9f21" HorizontalOptions="Center" VerticalOptions="Center" Toggled="sVibration_Toggled">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="On">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="#ffdf87"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="White"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Switch>

                <Label Text="GHOST PIECE" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" Grid.Row="3" Grid.ColumnSpan="3"/>
                <Switch x:Name="sGhostPiece" IsToggled="True" Grid.Row="4" Grid.ColumnSpan="3" OnColor="#ff9f21" HorizontalOptions="Center" VerticalOptions="Center" Toggled="sGhostPiece_Toggled">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="On">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="#ffdf87"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="ThumbColor" Value="White"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Switch>

                <!--<BoxView BackgroundColor="#00a9de" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Center" Margin="0,35,0,30" Grid.Row="5" Grid.ColumnSpan="3"/>-->
            </Grid>

            <BoxView Grid.Row="5" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="End" TranslationY="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*-0.035)'}" HeightRequest="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.002)'}"/>

            <Grid Grid.Row="6" RowSpacing="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.015)'}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <!--<RowDefinition Height="auto"/>-->
                </Grid.RowDefinitions>

                <Label Text="{Binding Source={x:Reference FieldWidth}, Path=Value, StringFormat='FIELD HEIGHT IN SQUARES: {0:#}'}" Grid.Row="0"
                                           HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" FontAttributes="Bold"/>
                <Slider x:Name="FieldWidth" Maximum="12" Value="10" Minimum="8" VerticalOptions="Center" Grid.Row="1" Margin="15,0,15,0"
                                            ThumbColor="#ffdf87" BackgroundColor="Transparent"/>

                <Label Text="{Binding Source={x:Reference FieldHeight}, Path=Value, StringFormat='FIELD WIDTH IN SQUARES: {0:#}'}" Grid.Row="2"
                                           HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" FontAttributes="Bold"/>
                <Slider x:Name="FieldHeight" Maximum="24" Value="20" Minimum="16" VerticalOptions="Center" Grid.Row="3" Margin="15,0,15,0"
                                            ThumbColor="#ffdf87" BackgroundColor="Transparent"/>
                <!--<BoxView BackgroundColor="#00a9de" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Center" Margin="0,24,0,15" Grid.Row="4"/>-->
            </Grid>

            <BoxView Grid.Row="7" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" TranslationY="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.005)'}" HeightRequest="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.002)'}"/>

            <Grid Grid.Row="8" RowSpacing="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.015)'}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <!--<RowDefinition Height="auto"/>-->
                </Grid.RowDefinitions>

                <Label Text="{Binding Source={x:Reference TouchSensitivity}, Path=Value, StringFormat='TOUCH SENSITIVITY: {0:#}'}" Grid.Row="0"
                                           HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.020)'}" FontAttributes="Bold"/>
                <Slider x:Name="TouchSensitivity" Maximum="+10" Value="0" Minimum="-10" VerticalOptions="Center" Grid.Row="1" Margin="15,0,15,0"
                                            ThumbColor="#ffdf87" BackgroundColor="Transparent"/>
                <!--<BoxView BackgroundColor="#00a9de" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Center" Margin="0,6,0,15" Grid.Row="2"/>-->
            </Grid>

            <BoxView Grid.Row="9" BackgroundColor="#00a9de" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.002)'}"/>

            <Grid x:Name="grHow" Grid.Row="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="btnHowToPlay" WidthRequest="{Binding Source={x:Reference grHow}, Path=Width, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.55)'}" HeightRequest="{Binding Source={x:Reference grHow}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.45)'}" Text="HOW TO PLAY" TextColor="White" FontSize="{Binding Source={x:Reference btnHowToPlay}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.3)'}" CornerRadius="999999999" BorderWidth="{Binding Source={x:Reference btnHowToPlay}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*0.02)'}" BorderColor="#94c1ff" BackgroundColor="#195c80" VerticalOptions="Center" HorizontalOptions="Center" TranslationY="{Binding Source={x:Reference bdSettings}, Path=Height, Converter={StaticResource MathExpressionConverter}, ConverterParameter='(x*-0.025)'}" Grid.Row="0" xct:ShadowEffect.Color="Black" xct:ShadowEffect.Opacity="1" Clicked="btnHowToPlay_Clicked"/>
            </Grid>
        </Grid>

    </ContentPage.Content>
    
</ContentPage>